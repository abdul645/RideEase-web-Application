
<%- include('./partials/header.ejs')%>
    <link rel="stylesheet" href="/css/driverSignin.css">
<div class="overlay"></div>
<div class="wrapper">
    <span class="icon-close" id="icon-close">&times;</span>
    <div class="form-box login">
        <h2>Login</h2>
        <form action="/driverSignin" method="post">
            <div class="input-box">
                <span class="icon"><i class="fa-solid fa-envelope"></i></span>
                <input type="email" name="email" id="email" required>
                <label id="email">Email</label>
            </div>
            <div class="input-box">
                <span class="icon"><i class="fa-solid fa-eye-slash" id="eyeicon"></i></i>
                    <!-- <i class="fa-solid fa-eye"></i> -->
                </span>
                <input type="password" id="password" name="password" required>
                <label for="">password</label>
            </div>
            <div class="remember-forgot">
                <label><input type="checkbox">Remember me</label>
                <a href="#">Forgot Password?</a>
            </div>
            <button class="btn">Login</button>
            <div class="login-register">
                <p>Don't have an account ?
                    <a href="/driverSignup" class="login-link" >signup</a>
                </p>
            </div>
        </form>
    </div>
</div>

<script src="/js/driverSignin.js"></script>
